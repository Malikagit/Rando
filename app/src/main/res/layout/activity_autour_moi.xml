<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutourMoi">


    <TextView
        android:id="@+id/tv_CurrentPosition"
        android:layout_width="343dp"
        android:layout_height="61dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgvGpsFixed"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="          votre_position" />

    <ImageView
        android:id="@+id/imgvGpsFixed"
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toStartOf="@+id/tv_CurrentPosition"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_CurrentPosition"
        app:srcCompat="@drawable/ic_baseline_gps_fixed_24" />

    <SeekBar
        android:id="@+id/sb_dinevele"
        android:layout_width="365dp"
        android:layout_height="28dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:maxHeight="10dp"
        android:minHeight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_CurrentPosition" />

    <TextView
        android:id="@+id/tvDistanceEloignement"
        android:layout_width="113dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sb_dinevele"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvLocomotion"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:text="@string/velo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDistanceEloignement" />

    <Button
        android:id="@+id/btnRechercherParcours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:text="Rechercher"
        android:onClick="chargerParcours"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocomotion" />


</androidx.constraintlayout.widget.ConstraintLayout>

